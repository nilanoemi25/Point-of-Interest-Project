
<form action="/dashboard/addpoi" method="POST">
  <div class="field">
    <label class="label">Name</label> <input class="input" type="text" placeholder="Enter point of interest title" name="name">
    <label class="label">Description</label> <input class="input" type="text" placeholder="Enter point of interest description" name="description">
    <label class="label">Category</label> <input class="input" type="text" placeholder="Enter point of interest category" name="category">
    <label class="label">Location</label> <input class="input" type="text" placeholder="Enter point of interest location" name="location"> 
    <label for="file-upload"> Upload an Image: </label> <input class="input" type="file" name="image" accept="image/*"> 
  </div>
  <button class="button is-link">Add Point of Interest</button>
</form>
